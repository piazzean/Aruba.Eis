@model Aruba.Eis.Models.Bl.User
@using Aruba.Eis
@{
    ViewBag.Title = I18nResource.DELETE_USER;
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

    </dl>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <h3>@I18nResource.CONFIRM_DELETE</h3>

        <div class="form-actions no-color">
            <input type="submit" value="@I18nResource.DELETE" class="btn btn-warning" />
            @Html.ActionLink(I18nResource.CANCEL, "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

